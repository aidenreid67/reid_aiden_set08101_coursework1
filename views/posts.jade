doctype html
html
  head
    title=title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    meta(name="viewport", content="width=device-width, initial-scale=1")

block heading
  .header(style = "text-align: left;").
    <mark> CELTIC BLOG </mark>

  .navBar
        a(href = "/") ABOUT

        a(href="/feed") FEED

        a(href="/posts") ADD POST

        a(href = "/login") LOGIN

  .row
      .leftcolumn
        .card

          #addPost
          form#form(name="form", method="post", action="/posts")
            textarea#postContent(name="postTitle",cols="80", placeholder="Please enter a post title")
            textarea#postContent(name="postDescr",cols="80", placeholder="Please enter post content")
            input#inputButton(type="submit",value="New Post")


  block titlePost

